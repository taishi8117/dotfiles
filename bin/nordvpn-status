#!/bin/bash
vpn_status=$(nordvpn status)
vpn_hostname=$(echo "$vpn_status" | grep "^Hostname:" | awk '{print $2}')
vpn_icon=$(echo "ï€£")

if [[ -z "$vpn_hostname" ]]; then
  echo ""
else
  vpn_hostname=$(echo "$vpn_hostname" | cut -d. -f1)
  echo "<span color=\"#fcfc03\">$vpn_icon $vpn_hostname</span>"
fi
